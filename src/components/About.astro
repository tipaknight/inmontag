---
import { Image } from "@astrojs/image/components";
import aboutImg1 from "../images/3_insta.jpg";
import aboutImg2 from "../images/4_insta.jpg";
import * as AboOut from "../content/about.md";
---

<section class="about">
  <div class="container">
    <div class="wrapper-about">
      <div class="wrapper-about__item-1">
        <h3>{AboOut.frontmatter.title_1}</h3>
        <p class="wrapper-about__item-1--text">
          {AboOut.frontmatter.title_1_text}
        </p>
        <Image
          class="wrapper-about__item-1--img"
          src={aboutImg1}
          width={500}
          alt="img1"
        />
      </div>
      <div class="wrapper-about__item-2">
        <Image
          class="wrapper-about__item-2--img"
          src={aboutImg2}
          width={500}
          alt="img2"
        />
        <h3 class="wrapper-about__item-2--title">
          {AboOut.frontmatter.title_2}
        </h3>
        <p class="wrapper-about__item-2--text">
          {AboOut.frontmatter.title_2_text}
        </p>
      </div>
    </div>
  </div>
</section>
<style lang="scss">
  .about {
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    padding: 40px 0;
  }
  .wrapper-about {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 40px 30px;

    gap: 30px 20px;
    &__item-1 {
      max-width: 520px;
      width: 100%;
      height: 100%;
      &--text {
        padding: 20px 0;
      }
      &--img {
        width: 100%;
        height: 100%;
        box-shadow: var(--shadow);
        border-radius: 0 0 0 80px;
      }
    }
    &__item-2 {
      max-width: 520px;
      width: 100%;
      height: 100%;
      &--title {
        padding: 30px 0 0;
      }

      &--text {
        padding: 20px 0;
      }
      &--img {
        width: 100%;
        height: 100%;
        box-shadow: var(--shadow);
        border-radius: 0 80px 0 0;
      }
    }
  }
</style>
