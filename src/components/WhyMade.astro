---
import { Image } from "@astrojs/image/components";
import whyImg from "../images/5_insta.jpg";
import WhyVideo from "./WhyVideo.astro";
import * as AboOut from "../content/about.md";
---

<section class="why-made">
  <div class="container">
    <div class="wrapper-why">
      <div class="wrapper-why__item">
        <h2>{AboOut.frontmatter.title}</h2>
        <p class="wrapper-why__item--text">
          {AboOut.frontmatter.title_text}
        </p>
        <WhyVideo />
      </div>
      <div class="wrapper-why__item">
        <Image
          class="wrapper-why__item--img"
          src={whyImg}
          width={520}
          alt="insta"
        />
      </div>
    </div>
  </div>
</section>
<style lang="scss">
  .why-made {
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    padding: 40px 0;
  }
  .wrapper-why {
    display: flex;
    flex-wrap: wrap;
    gap: 30px 20px;
    justify-content: center;
    align-items: center;
    &__item {
      max-width: 520px;
      width: 100%;
      height: 100%;

      &--text {
        padding: 20px 0;
      }
      &--img {
        width: 100%;
        height: 100%;
        box-shadow: var(--shadow);
      }
    }
  }
</style>
