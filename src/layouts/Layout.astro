---
import "../styles/_global.scss";
import Footer from "../components/Footer.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru-Ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="keywords"
			content="Упаковка инстаграм, инсталендинг, бесконечная лента, дизайн инстаграм, профиль в инсте"
		/>
		<meta
			name="description"
			content="Упаковка вашего инстаграм. Видеомонтаж постов и сторис, рекламных роликов в социальных сетях. Создание бесконечных лент и инсталендингов."
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<Footer />
		<style is:global></style>
	</body>
</html>
